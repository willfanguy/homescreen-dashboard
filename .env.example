# Dashboard Environment Variables
# Copy this to .env.local and fill in your values

# =============================================================================
# BACKEND (server)
# =============================================================================

# Homebridge API access
HOMEBRIDGE_URL=http://localhost:8581
HOMEBRIDGE_USERNAME=your-username
HOMEBRIDGE_PASSWORD=your-password

# Sonos HTTP API
SONOS_API_URL=http://localhost:5005

# =============================================================================
# FRONTEND (Vite - must be prefixed with VITE_)
# =============================================================================

# Calendar iCal URLs (private/secret URLs from Google Calendar)
# Get these from: Google Calendar > Settings > [Calendar] > "Secret address in iCal format"
VITE_ICAL_URL_PERSONAL=https://calendar.google.com/calendar/ical/your-email%40gmail.com/private-YOUR-SECRET/basic.ics
VITE_ICAL_URL_SHARED=https://calendar.google.com/calendar/ical/your-shared-calendar/private-YOUR-SECRET/basic.ics

# Google Calendar API (for work calendar)
VITE_GOOGLE_CALENDAR_ID=your-work-email@company.com

# Trash/Recycling calendar (Recollect service)
VITE_ICAL_URL_TRASH=https://recollect.a.ssl.fastly.net/api/places/YOUR-PLACE-ID/services/YOUR-SERVICE/events.en-US.ics?client_id=YOUR-CLIENT-ID

# iCloud Shared Album token (from shared album URL: icloud.com/sharedalbum/#TOKEN)
VITE_ICLOUD_ALBUM_TOKEN=your-album-token
